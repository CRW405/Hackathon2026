# Example environment variables for Hackathon2026
# Copy this file to `.env` and edit values for your environment.

# Backend server configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=6000

# Client UI
CLIENT_HOST=127.0.0.1
CLIENT_PORT=5000

# MongoDB (full URI)
MONGO_URI=mongodb://localhost:27017/

# Packet sniffer / other reporters - full URL to POST sniff data
PACKET_SNIFFER_POST_PATH=/api/packetSniff/postSniffs
PACKET_SNIFFER_BASE_URL=http://127.0.0.1:6000

# Swipe tracking endpoint path
TRACK_SWIPE_PATH=/api/trackSwipe/

# Camera server (if used)
CAMERA_PORT=7000
